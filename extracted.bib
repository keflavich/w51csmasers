@misc{Ginsburg2011c,
  author =        {{Ginsburg}, A. and {Mirocha}, J.},
  howpublished =  {Astrophysics Source Code Library},
  month =         sep,
  title =         {{PySpecKit: Python Spectroscopic Toolkit}},
  year =          {2011},
  abstract =      {PySpecKit is a Python spectroscopic analysis and
                   reduction toolkit meant to be generally applicable to
                   optical, infrared, and radio spectra. It is capable
                   of reading FITS-standard and many non-standard file
                   types including CLASS spectra. It contains procedures
                   for line fitting including gaussian and voigt profile
                   fitters, and baseline-subtraction routines. It is
                   capable of more advanced line fitting using arbitrary
                   model grids. Fitting can be done both in batch mode
                   and interactively. PySpecKit also produces
                   publication-quality plots with TeX axis labels and
                   annotations. It is designed to be extensible,
                   allowing user-written reader, writer, and fitting
                   routines to be "plugged in." It is actively under
                   development and currently in the 'alpha' phase, with
                   plans for a beta release.},
}

